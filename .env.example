# إعدادات البيئة المطلوبة للنظام
NODE_ENV=production

# إعدادات البريد الإلكتروني (مطلوبة)
GMAIL_USER=your-email@gmail.com
GMAIL_APP_PASSWORD=your-16-digit-app-password
EMAIL_FROM=your-email@gmail.com

# إعدادات الموقع
SITE_URL=https://your-domain.vercel.app
ENCRYPTION_KEY=your-super-secret-encryption-key-min-32-chars

# API الأحاديث
HADITH_API_KEY=your-hadith-api-key

# قاعدة البيانات (اختر واحدة)
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/quran_newsletter
# أو
KV_REST_API_URL=your-vercel-kv-url
KV_REST_API_TOKEN=your-vercel-kv-token

# إعدادات NextAuth (اختيارية)
NEXTAUTH_URL=https://your-domain.vercel.app
NEXTAUTH_SECRET=your-nextauth-secret
